<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.EpicFragment">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/mem_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="140dp"
            android:layout_marginTop="60dp">

            <RelativeLayout
                android:id="@+id/no_internet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible">

                <TextView
                    android:id="@+id/no_internet_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textSize="16dp"
                    android:text="Нет интернета. Проверьте соединение">

                </TextView>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/no_internet_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/no_internet_text"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="обновить" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/showable"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/image_show"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_centerInParent="true"
                    />

                <TextView
                    android:id="@+id/text_show"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp">

                </TextView>


            </RelativeLayout>


        </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/showable_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mem_card"
        android:layout_marginTop="-120dp"
        android:layout_centerHorizontal="true"

        >
        <com.google.android.material.button.MaterialButton
            android:id="@+id/do_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Назад">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/do_forward"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:text="Вперед">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>




    </RelativeLayout>




